<div class="container tt-registrationForm-homePage" style="width: 50vw; margin-top: 5%; border: 2px solid orange; border-radius: 6px; box-shadow: 10px 5px 5px lightgrey">
    <div class="row justify-content-center">
        <div class="col">
            {{ form_start(form, {'action': path('app_tips_new'), 'attr': {'class': 'form-signin', 'style': 'font-family: \'Just Another Hand\', cursive; text-align: center;'}}) }}
            <div class="form-group">
                {{ form_label(form.title) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.text) }}
                {{ form_widget(form.text, {'attr': {'class': 'form-control', 'rows': 10, 'maxlength': 400}}) }}
            </div>



            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.city) }}
                        {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.country) }}
                        {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.continent) }}
                        {{ form_widget(form.continent, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.category) }}
                        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.imageFile, 'Tips Picture') }}
                        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-warning btn-lg mt-3 mx-auto mb-3">Create Tips</button>

            {{ form_end(form) }}
        </div>
    </div>
</div>